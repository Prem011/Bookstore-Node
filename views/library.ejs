<div class="fullcontent-library">
    <%- include("./partials/header") %>
<%- include("./partials/nav") %>

    <!--  -->

    

    <h1 class="text-center mt-5 text-light">Book Library</h1>
<!--  -->
<div class=" mt-5 ">
    <div class="d-flex flex-wrap bg-transparent gap-3 p-5">
        <% books.forEach(function(book, index){ %>
        
        <div class="card" style="width: 18rem;">
            <img src="/images/uploads/<%= book.image %>" class="card-img-top" alt="...">
            <h5 class="card-title"><%= book.name%></h5>
            <h6 class="card-subtitle mb-2 text-body-secondary">
                <%= book.author %>
            </h6>
            <p class="card-text"><%= book.description%></p>
            <div class="d-flex mb-2">
                <a href="/delete/<%= book._id%>" class="card-link text-danger">Delete Book</a>
            <a href="/update/<%= book._id%>" class="card-link">Update Book</a>
            </div>
          </div>


        <% }) %>
    </div>
</div>

  

 <!--  -->



<%- include("./partials/footer") %> 
</div>